[Unit]
Description=Telegram bot 'Japan Dictionary Telegram Bot'
After=syslog.target
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/usr/local/bin/bot
ExecStart=/usr/bin/python3 /usr/local/bin/bot/JapDicTelegramBot.py
RestartSec=10
Restart=always
 
[Install]
WantedBy=multi-user.target
